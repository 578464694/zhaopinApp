/* pages/job-detail/job-detail.wxss */
@import "../tpl/salary-tpl/salary-tpl.wxss";

.header {
  border-bottom:1px solid #f3f3f3;
  width:696rpx;
}

.section{
  padding-left:33rpx;
  padding-right:33rpx;
  background-color:#fff;
  width:90%;
}

.h1 {
  font-size:27px;
  font-weight: 600;
  letter-spacing: 1px;
  margin-bottom:18rpx;
}

.h2 {
  font-size:20px;
  font-weight: 600;
  letter-spacing: 1px;
}

.job-infos {
  display: flex;
  flex-direction: row;
  margin-top:18rpx;

}

.job-infos view {
  font-size: 30rpx;
}

.advantage {
  color: #aaa;
  font-size: 27rpx;
  margin-top:20rpx;
  padding-bottom:43rpx;
}

/* 公司 */

.company {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding-top:42rpx;
  padding-bottom: 20rpx;
}

.company-name {

}

.avatar {
  width:120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.delimiter {
  height: 20rpx;
  background-color:#f0f1f5;
}

/* 职位描述 */
.job-about {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.static-title {
  font-size: 0.9rem;
}

.static-title.top-title {
  margin-top:46rpx;
  margin-bottom:40rpx;
}

.tips {
  display: flex;
  flex-direction: row;
  margin:10rpx auto 0 auto;
}

.tips view {
  font-size:30rpx;
  padding:18rpx 30rpx 18rpx 30rpx;
  border: 1px solid #d9d9d9;
  border-radius: 15rpx;
  margin-right:15rpx;
  color:#969696;
}

.tips view:last-child {
  margin-right:0;
}

.job-desc {
  font-size:30rpx;
  color:#666;
  font-family: "微软雅黑";
  letter-spacing: 1px;
  line-height: 1.4rem;
}

.address {
  font-size:0.8rem;
  color:#777777;
  margin-top:36rpx;
  margin-bottom: 36rpx;
}

.job-section{
  width:100%;
  padding-top:40rpx;
  padding-bottom: 40rpx;
  border-top:1px solid #f3f3f3;
}


.h3 {
  font-size:0.8rem;
  font-weight: 600;
}

.job-item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width:100%;
}

.job-item .job-infos {
  color:#999999;
  font-size:0.7rem;
  margin-bottom:13rpx;
}

.datetime {
  color:#999999;
  font-size:0.7rem;
}

.job-section .company-name {
  font-size: 0.8rem;
  margin-top:13rpx;
}